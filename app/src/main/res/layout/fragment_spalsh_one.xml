<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jakera.SplashDemo.Views.CircleImageView
        android:id="@+id/iv_splash_first_circle"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="90dp"
        android:src="@mipmap/splash_love"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        />
    <LinearLayout
        android:id="@+id/LL_splash_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_splash_first_circle"
        app:layout_constraintRight_toLeftOf="@id/iv_splash_first_circle"
        app:layout_constraintLeft_toRightOf="@id/iv_splash_first_circle"
        >
        <TextView
            android:id="@+id/tv_splash_first_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有一种"
            android:ems="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_splash_first_circle_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:background="@drawable/shape_yellow_circle"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="爱"
                android:ems="1"
                />
            <TextView
                android:id="@+id/tv_splash_second_circle_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="2dp"
                android:gravity="center"
                android:background="@drawable/shape_yellow_circle"
                android:text="情"
                android:textSize="20dp"

                android:ems="1"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/LL_splash_first"
        app:layout_constraintRight_toLeftOf="@id/iv_splash_first_circle"
        app:layout_constraintLeft_toRightOf="@id/iv_splash_first_circle"
        >
        <TextView
            android:id="@+id/tv_splash_second_poem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="心有灵犀一点通"
            android:textSize="20dp"
            android:ems="1"
            />
        <TextView
            android:id="@+id/tv_splash_first_poem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="身无彩凤双飞翼"
            android:textSize="20dp"
            android:ems="1"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>